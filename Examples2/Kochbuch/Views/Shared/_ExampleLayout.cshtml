<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />  
    <meta name="viewport" content="width=device-width" />           

    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="~/Content/images/favicon.ico" />    
    @Styles.Render("~/Content/styles")   
    
    @Html.X().ResourceManager()
</head>
<body>
    
    <!-- body -->
    @RenderBody()
    <!-- /body -->     
    
    @(Html.X().Panel()
        .ID("WindowSource")
        .Title("Source Code")
        .Height(300)
        .Width(600)
        .AutoScroll(true)
        .Config("contentEl", "myCode") 
        .Draggable(true)
        .Closable(true)
        .Resizable(true)
        .StyleSpec("opacity: 0.8")) 

<div id="myCode">
<pre><code>@ViewBag.Code</code></pre>        
</div>   
       
    @Scripts.Render("~/Scripts/scripts")
    @RenderSection("scripts", required: false)

    <script>
        hljs.initHighlightingOnLoad();
    </script>

</body>
</html>