@(Html.X().TabPanel()
    .ID("ExampleTabs")        
    .Region(Region.Center)
    .MinTabWidth(80)
    .Plugins(plugins =>
                {
                    plugins.Add(new TabCloseMenu());
                    plugins.Add(new BoxReorderer());
                }
    )
    .Items(items => items.Add(new Panel
        {
            Title = "Start",
            Icon = Icon.ApplicationHome,
            Reorderable = false,
            Loader = new ComponentLoader
                {
                    Url = "/Home/Start",
                    Mode = LoadMode.Frame
                }
        })
    )
)