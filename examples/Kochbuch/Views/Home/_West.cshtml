@{

    var proxy = new AjaxProxy { Url = "/Home/GetChapters" };

    var store = new TreeStore 
    {
        Root = {
            new Node 
            {
                NodeID = "Root",
                Text = "Root",
                Expanded = true
            }
        },
        Proxy = { proxy }
    };

    var tree = new TreePanel
    {
        ID = "exampleTree",
        AutoScroll = true,
        Lines = false,
        UseArrows = true,
        CollapseFirst = false,
        RootVisible = false,
        HideHeaders = true,
        Animate = false,
        Store = { store },
        Listeners =
        {
            ItemClick = { Fn = "exampleTree.onItemClick" },
            AfterRender = { Fn = "exampleTree.onAfterRender" },
            Load = { Fn = "exampleTree.onLoad" }
        }
    };
}

@(Html.X().Panel()
    .Region(Region.West)
    .Layout(LayoutType.Fit)
    .Width(240)
    .Header(false)
    .Collapsible(true)
    .Split(true)
    .CollapseMode(CollapseMode.Mini)
    .Margins("0 0 4 4")
    .Border(false)
    .Items(items =>items.Add(tree))
)