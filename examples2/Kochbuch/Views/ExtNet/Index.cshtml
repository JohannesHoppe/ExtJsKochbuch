@model Kochbuch.Models.ExtNetModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Ext.NET MVC Sample</title>    
    <!--<link type="text/css" rel="stylesheet" href="http://speed.ext.net/www/intro/css/main.css" />-->
    @Styles.Render("~/Content/styles")
</head>
<body>
    @(Html.X().ResourceManager())
       
    <div class="wrapper">
        <h1 style="margin-top: -3px;">Welcome to Ext.NET!</h1>
        <p>Thank you for installing Ext.NET MVC.</p>
        <p class="last">You can check that everything is working correctly by submitting a value in the message box below.</p>
    </div>
    
    @using (Html.BeginForm()) {
    
        @(Html.X().Panel()
            .Title(Model.Title)
            .Height(215)
            .Width(350)
            .Frame(true)
            .Collapsible(true)
            .Cls("box")
            .BodyPadding(5)
            .DefaultButton("Button1")
            .Layout(LayoutType.Anchor)
            .DefaultAnchor("100%")
            .Items(Html.X().TextArea()
                .Name("message")
                .EmptyText(Model.TextAreaEmptyText)
                .FieldLabel("Message")
                .Height(85)
            )
            .Buttons(Html.X().Button()
                .ID("Button1")
                .Text("Submit")
                .Icon(Icon.Accept)
                .DirectClickAction("SampleAction")
            )
        )
        
    }

    <div class="wrapper wrapper-lower">
        <h2>Examples</h2>
        <p>Ext.NET features over 100 Components and 600 Samples for use in your ASP.NET apps.</p>
        <p>Check out the <a href="http://mvc.ext.net/">MVC Examples Explorer</a> and WebForms <a href="http://examples.ext.net/">Examples Explorer</a> to see what's possible.</p>
        <hr>
        <h2>Technical Support</h2>
        <p>Need a little help? Visit our <a href="http://www.ext.net/support/">Support</a> page for links to documentation, examples and more. </p>
        <hr>
        <h2>Community Forums</h2>
        <p>Keep up to date with all things Ext.NET by joining the active community in our <a href="http://forums.ext.net/">Forums</a>.</p>
        <hr>
        <h2>Purchase</h2>
        <p class="last">When you're ready, <a href="http://www.ext.net/store/">purchase</a> a license and start building web apps with ease!</p>
    </div>

</body>
</html>